{
  "name": "fptshop-automation",
  "version": "1.0.0",
  "description": "Automation testing for FPT Shop",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:cucumber": "cucumber-js",
    "test:cucumber:headed": "HEADLESS=false cucumber-js",
    "test:cucumber:shard": "node scripts/cucumber-shard.js",
    "report:cucumber": "node scripts/generate-cucumber-report.js",
    "report:playwright": "playwright show-report",
    "report:open:cucumber": "open cucumber-report/index.html",
    "report:open:playwright": "open playwright-report/index.html",
    "trace:list": "node scripts/list-traces.js",
    "trace:show": "node scripts/show-trace.js",
    "test:all": "npm run test:playwright && npm run test:cucumber",
    "clean": "rm -rf test-results playwright-report blob-report cucumber-report all-cucumber-reports traces *.html *.json allure-results allure-report .allure",
    "clean:reports": "rm -rf playwright-report cucumber-report all-cucumber-reports allure-report",
    "clean:traces": "rm -rf traces",
    "allure:generate": "node scripts/generate-allure-report.js",
    "allure:open": "npx allure open allure-report",
    "allure:serve": "npx allure serve allure-results",
    "allure:clean": "rm -rf allure-results allure-report .allure",
    "test:allure": "npm test && npm run allure:serve",
    "test:cucumber:allure": "npm run test:cucumber && npm run allure:serve",
    "test:all:allure": "npm run clean:reports && npm run allure:clean && npm test && npm run test:cucumber && npm run allure:generate && npm run allure:open",
    "clean:all": "npm run clean && npm run allure:clean"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.4.0",
    "@cucumber/messages": "^31.0.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^25.0.2",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^3.4.3",
    "allure-playwright": "^3.4.3",
    "cucumber-html-reporter": "^7.2.0",
    "dotenv": "^16.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  }
}
